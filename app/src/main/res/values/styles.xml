<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextWarning" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBaseLight</item>
        <item name="android:background">@color/colorWarning</item>
        <item name="android:drawableLeft">@drawable/baseline_refresh_24px</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="TextHeader" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize"> 21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBaseDark</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBaseDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
